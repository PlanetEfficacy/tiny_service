<div class="container">
  <h1>GitBoard</h1>
  <table class="table">
    <thead>
      <th>Number of commits</th>
      <th>Most recent commiter</th>
      <th>Time since last commit</th>
    </thead>
    <tr>
      <td><%= Commit.count %></td>
      <td><%= @commits.first.author_name %></td>
      <td><%= time_ago_in_words(@commits.first.timestamp) %></td>
    </tr>
  </table>
</div>

<div class="container">
  <table class="table">
    <thead>
      <th>SHA</th>
      <th>MESSAGE</th>
      <th>LINK</th>
    </thead>
    <% @commits.each do |commit| %>
    <tr>
      <td><%= commit.sha%></td>
      <td><%= commit.message%></td>
      <td><%= link_to "link", commit.url %></td>
    </tr>
    <% end %>
  </table>
</div>
